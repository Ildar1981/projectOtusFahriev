{
  "name": "autotests-front",
  "version": "1.0.0",
  "description": "To make it easy for you to get started with GitLab, here's a list of recommended next steps.",
  "main": "index.js",
  "scripts": {
    "test:core": "playwright test tests/core",
    "test-headed:core": "playwright test tests/core --headed",
    "test:lis": "playwright test tests/lis",
    "test-headed:lis": "playwright test tests/lis --headed"
  },
  "repository": {
    "type": "git",
    "url": "http://gl.pkzdrav.ru/zdraw/autotests-front.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.30.0",
    "eslint": "^8.34.0",
    "eslint-plugin-playwright": "^0.12.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "extends": [
      "plugin:playwright/playwright-test"
    ],
    "rules": {
      "indent": [
        "error",
        2
      ],
      "curly": [
        "error",
        "all"
      ],
      "quotes": [
        "error",
        "backtick"
      ],
      "max-len": [
        "error",
        {
          "code": 140,
          "ignoreUrls": true
        }
      ]
    }
  },
  "gitHooks": {
    "pre-commit": "npm run lint"
  }
}
